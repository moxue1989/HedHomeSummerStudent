@model HedHome.Models.HedDataModel.Course

@{
    ViewData["Title"] = "Course Skills";
}

<h4>Edit Skills for: @Model.Title</h4>
<style>
    #div-search {
	position: absolute;
	width: 20em;
	border: 1px solid;
	padding: 10px;
	box-shadow: 3px 3px #888888;
	background-color: #fff;
}
.search-result:hover{
	background-color: #eee;
	cursor: copy;
}
#wrap-search {
	display: inline-block;
}
.skill-name{
	cursor: pointer;
}
</style>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Course Number:</h4> @Model.CourseNumber
    </div>
    <div class="col-md-4">
        <h4>Course Description:</h4> @Html.Raw(Model.Description)

    </div>
    <div class="col-md-4">
        <h4>Current Course Skills:</h4> 
        <h5>Click to add add and remove</h5>
        <input type="hidden" id="courseId" value="@Model.Id">
        <div id='mount'></div>
        <script type="text/javascript" src="/js/app.js"></script>
    </div>
</div>


