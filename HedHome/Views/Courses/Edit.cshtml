@model HedHome.Models.HedDataModel.Course

@{
    ViewData["Title"] = "CourseSkill";
}

<h4>Edit Skills for: @Model.Title</h4>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-2">
        <h6>Course Number:</h6> @Model.CourseNumber
    </div>
    <div class="col-md-4">
        <h6>Course Description:</h6> @Model.Description
    </div>
    <div class="col-md-4">
        <h6>Course Skills:</h6>
        <div id="courseId" hidden="hidden">@Model.Id</div>
        <div id='mount'></div>
        <script type="text/javascript" src="./js/app.js"></script>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    #div-search {
        position: absolute;
        width: 20em;
        border: 1px solid;
        padding: 10px;
        box-shadow: 3px 3px #888888;
    }

    #wrap-search {
        display: inline-block;
    }
</style>